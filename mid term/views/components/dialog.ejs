<!-- 
<% /* %>
 Include this file in your ejs file to use the dialog component

  Usage:
  1. Include this file in your ejs file
  2. Use the following code snippet to use the dialog component
      ```ejs
      <%- include('components/dialog.ejs', 
      { dialogId: 'dialogId',
        title: 'Title',
        message: 'Message',
        confirmAction: 'confirmAction()' 
      }) %>
      ```
  3. Add showModel('dialogId') function to the associated button to show the dialog 
<% */ %> 
-->


<div class="fixed inset-0 items-center justify-center z-50 hidden" id="<%= dialogId %>">
  <div class="fixed inset-0 bg-gray-800 opacity-50"></div>
  <div class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all sm:max-w-lg sm:w-full">
    <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
      <div class="sm:flex sm:items-start">
        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            <%= title %>
          </h3>
          <div class="mt-2">
            <p class="text-sm text-gray-500">
              <%= message %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
      <button type="button" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 text-base font-medium text-white focus:outline-none focus:ring-2 focus:ring-offset-2 sm:ml-3 sm:w-auto sm:text-sm
      <% if (confirmActionColor === 'red') { %>
        bg-red-600 hover:bg-red-700 focus:ring-red-500
      <% } else if (confirmActionColor === 'blue') { %>
        bg-blue-600 hover:bg-blue-700 focus:ring-blue-500
      <% } %>" onclick=<%=confirmAction %>>
        <% if (typeof confirmActionText !=='undefined' && confirmActionText) { %>
          <%= confirmActionText %>
            <% } else { %>
              Confirm
              <% } %>
      </button>
      <button type="button"
        class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm"
        onclick="closeModal('<%= dialogId %>')">Cancel</button>
    </div>
  </div>
</div>

<script>
  function showModal(dialogId) {
    const dialog = document.getElementById(dialogId);
    dialog.classList.remove('hidden');
    dialog.classList.add('flex');
  }

  function closeModal(dialogId) {
    const dialog = document.getElementById(dialogId);
    dialog.classList.add('hidden');
    dialog.classList.remove('flex');
  }
</script>